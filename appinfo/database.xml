<?xml version="1.0" ?>
<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*registration_codes</name>
		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<autoincrement>true</autoincrement>
				<unsigned>true</unsigned>
				<primary>true</primary>
			</field>
			<field>
				<name>code</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>32</length>
			</field>
			<field>
				<name>uses</name>
				<type>integer</type>
				<notnull>true</notnull>
				<default>0</default>
			</field>
			<field>
				<name>max_uses</name>
				<type>integer</type>
				<notnull>false</notnull>
			</field>
			<field>
				<name>expiration_date</name>
				<type>date</type>
				<notnull>false</notnull>
			</field>
		</declaration>
	</table>
